generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum EventStatus {
  PENDING
  APPROVED
  REJECTED
}

model Event {
  id          Int      @id @default(autoincrement())
  eventName       String
  description String
  location    String
  date        DateTime
  price       String
  age         String
  email       String
  imgUrl      String?
  status      EventStatus   @default(PENDING)
  createdAt   DateTime @default(now())
}
