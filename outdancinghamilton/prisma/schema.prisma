generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model event {
  id          Int          @id @default(autoincrement())
  eventName   String
  description String
  location    String
  date        DateTime
  price       String
  age         String
  createdAt   DateTime     @default(now())
  imgUrl      String?
  email       String
  status      event_status @default(PENDING)
  eventLink   String?
  ticketLink  String?
}

enum event_status {
  PENDING
  APPROVED
  REJECTED
}
